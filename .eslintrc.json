{
  "extends": [
    "./node_modules/standard/eslintrc.json",
    "next/core-web-vitals",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "prettier/prettier": "error"
  },
  "ignorePatterns": ["node_modules", "dist", "build", ".next", ".prettierrc.js"]
}
